# === Scraping Configuration ===
APPLE_STORE_URL=https://www.apple.com/shop/buy-iphone

# true = navegador invisible, false = ver el navegador (útil para debug y desarrollo)
PLAYWRIGHT_HEADLESS=false

# Guardar screenshots automáticamente cuando hay errores
SCREENSHOT_ON_ERROR=true

# Guardar screenshots durante el proceso de scraping
SAVE_SCREENSHOTS=true

# === Target Configuration ===
# Producto exacto a buscar en Apple Store
TARGET_PRODUCT=iPhone 17 pro

# Estado donde buscar tiendas
TARGET_STATE=Florida

# === Telegram Configuration ===
# Obtén tu bot token hablando con @BotFather en Telegram: https://t.me/BotFather
# Envía /newbot y sigue las instrucciones
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Para obtener tu Chat ID:
# 1. Envía un mensaje a tu bot
# 2. Visita: https://api.telegram.org/bot<TU_TOKEN>/getUpdates
# 3. Busca el campo "chat":{"id":123456789}
TELEGRAM_CHAT_ID=123456789

# Habilitar/deshabilitar notificaciones de Telegram (true/false)
TELEGRAM_ENABLED=true

# Activar pausas de debug con Playwright Inspector (true/false)
PLAYWRIGHT_DEBUG=false
